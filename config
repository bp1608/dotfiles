set $mod Mod4
set $ws1 "240a1"
set $ws2 "240a2"
set $ws3 "240a3"
set $ws4 "240a4"
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
exec xrdb -merge ~/.Xresources
#exec xrandr --output DVI-I-1 --primary --mode 1600x900 --pos 900x0 --rotate normal --output DVI-D-1 --mode 1600x900 --pos 0x0 --rotate left --output HDMI-1 --mode 1280x1024 --pos 4100x0 --rotate normal --output DP-1 --mode 1600x900 --pos 2500x0 --rotate normal
exec --no-startup-id feh --bg-fill ~/wall.jpg
for_window [class=".*"] border pixel 0
gaps inner 32
gaps outer 16
gaps horizontal 32
border_radius 8

bindsym $mod+Return exec urxvt
bindsym $mod+f exec firefox
bindsym $mod+g exec code-oss
bindsym $mod+c kill
bindsym $mod+d exec rofi -show run -config ~/nord-rofi/nord.rasi
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "Kill XSession?' -B 'Exit' 'i3-msg exit'"
bindsym $mod+b split h
bindsym $mod+v split v
bindsym $mod+space focus mode_toggle
bindsym $mod+r mode "resize"
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
}
